<footer class="bg-theme-off-white text-theme-black pt-12 sm:pt-16 md:pt-24 pb-8 md:pb-12 font-body border-t border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    
    <!-- Newsletter Section -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-6 md:gap-8 mb-12 md:mb-20 pb-12 md:pb-20 border-b border-gray-200">
        <div class="max-w-xl w-full">
            <h3 class="text-xl sm:text-2xl md:text-3xl font-display font-medium mb-4 italic">Sign up for our newsletter to receive our news, deals and special offers.</h3>
        </div>
        <div class="w-full md:w-auto flex-1 max-w-md">
            <form class="flex border-b border-gray-300 pb-2">
                <input type="email" placeholder="Your Email Address" class="bg-transparent w-full outline-none placeholder:text-gray-400 text-sm" />
                <button type="submit" class="text-gray-400 hover:text-theme-black transition-colors flex-shrink-0">
                    <i class="fa-solid fa-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Links Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 mb-12 md:mb-20 text-sm">
        <div class="space-y-4 md:space-y-6">
            <h4 class="font-bold text-xs uppercase tracking-widest text-gray-400">Explore</h4>
            <ul class="space-y-3 md:space-y-4 opacity-80">
                <li><a href="/" class="hover:text-theme-gold transition-colors">Home</a></li>
                <li><a href="/rooms" class="hover:text-theme-gold transition-colors">Our Rooms</a></li>
                <li><a href="/amenities" class="hover:text-theme-gold transition-colors">Amenities</a></li>
                <li><a href="/gallery" class="hover:text-theme-gold transition-colors">Gallery</a></li>
                <li><a href="/contact" class="hover:text-theme-gold transition-colors">Contact</a></li>
            </ul>
        </div>
        <div class="space-y-4 md:space-y-6">
            <h4 class="font-bold text-xs uppercase tracking-widest text-gray-400">Services</h4>
            <ul class="space-y-3 md:space-y-4 opacity-80">
                <li><a href="/amenities" class="hover:text-theme-gold transition-colors">Restaurant</a></li>
                <li><a href="/amenities" class="hover:text-theme-gold transition-colors">Conference Facilities</a></li>
            </ul>
        </div>
        <div class="space-y-4 md:space-y-6">
            <h4 class="font-bold text-xs uppercase tracking-widest text-gray-400">Support & Company</h4>
            <ul class="space-y-3 md:space-y-4 opacity-80">
                <li><a href="/about" class="hover:text-theme-gold transition-colors">About Us</a></li>
                <li><a href="/contact" class="hover:text-theme-gold transition-colors">Contact Support</a></li>
            </ul>
        </div>
        <div class="space-y-4 md:space-y-6">
            <h4 class="font-bold text-xs uppercase tracking-widest text-gray-400">Legal</h4>
            <ul class="space-y-3 md:space-y-4 opacity-80">
                <li><a href="#" class="hover:text-theme-gold transition-colors">Terms & Conditions</a></li>
                <li><a href="#" class="hover:text-theme-gold transition-colors">Privacy Policy</a></li>
                <li><a href="#" class="hover:text-theme-gold transition-colors">Cancellation Policy</a></li>
            </ul>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 md:gap-6 pt-6 md:pt-8 border-t border-gray-200">
        <p class="text-xs text-gray-400 text-center md:text-left">Â© {new Date().getFullYear()} Mipeja | All rights reserved.</p>
        
        <div class="flex items-center justify-center order-first md:order-none">
             <span class="text-2xl sm:text-3xl md:text-4xl font-display font-bold text-gray-200 tracking-wider">MIPEJA</span>
        </div>

        <div class="flex gap-3 md:gap-4">
             <a href="#" class="w-8 h-8 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:bg-theme-black hover:text-white transition-all flex-shrink-0"><i class="fa-brands fa-facebook-f"></i></a>
             <a href="#" class="w-8 h-8 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:bg-theme-black hover:text-white transition-all flex-shrink-0"><i class="fa-brands fa-twitter"></i></a>
