---
import Navigation from './Navigation.astro';
import MobileNav from './MobileNav.astro';
import { hotel } from '../data/hotel';

const { bookingUrl } = Astro.props;
---

<header class="absolute top-0 left-0 right-0 z-50 bg-transparent transition-all duration-300">
	<div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-6 md:py-8">
		<div class="flex items-center gap-12">
			<a href="/" class="flex items-center gap-3 group">
				<div class="h-10 w-10 border border-white/30 text-white flex items-center justify-center font-display text-xl font-bold group-hover:border-gold group-hover:text-gold transition-colors italic">
					M
				</div>
                <div class="hidden sm:block">
                    <p class="text-xl font-display font-bold leading-none text-white tracking-widest uppercase">Mipeja</p>
                </div>
			</a>
			<div class="hidden lg:block border-l border-white/20 pl-12">
				<Navigation />
			</div>
		</div>
		<div class="flex items-center gap-6">
			<a class="hidden md:inline-flex items-center justify-center bg-gold px-6 py-3 text-xs font-bold text-charcoal uppercase tracking-[0.2em] hover:bg-gold-dark transition-all shadow-lg" href={bookingUrl || hotel.bookingUrl} target="_blank" rel="noreferrer">
				Reservation
			</a>
			<MobileNav hotelName={hotel.name} hotelLocation={hotel.location} />
		</div>
	</div>
</header>
