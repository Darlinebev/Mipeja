---
interface Props {
  hotelName: string;
  hotelLocation: string;
}

const { hotelName, hotelLocation } = Astro.props;
---

<div class="md:hidden">
  <button 
    id="mobile-menu-btn" 
    class="p-2 rounded-lg hover:bg-coral/10 transition-colors"
    aria-label="Toggle menu"
  >
    <svg 
      id="menu-icon" 
      class="w-6 h-6 text-ink" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
    <svg 
      id="close-icon" 
      class="w-6 h-6 text-ink hidden" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <!-- Mobile menu panel -->
  <div 
    id="mobile-menu" 
    class="hidden absolute top-16 left-0 right-0 bg-white border-b border-slate-200 shadow-lg md:hidden z-40"
  >
    <nav class="flex flex-col p-4 gap-2">
      <a 
        href="/" 
        class="px-4 py-3 rounded-lg text-slate-700 hover:bg-coral/10 hover:text-coral transition-colors font-medium"
      >
        Home
      </a>
      <a 
        href="/rooms" 
        class="px-4 py-3 rounded-lg text-slate-700 hover:bg-coral/10 hover:text-coral transition-colors font-medium"
      >
        Rooms
      </a>
      <a 
        href="/amenities" 
        class="px-4 py-3 rounded-lg text-slate-700 hover:bg-coral/10 hover:text-coral transition-colors font-medium"
      >
        Amenities
      </a>
      <a 
        href="/gallery" 
        class="px-4 py-3 rounded-lg text-slate-700 hover:bg-coral/10 hover:text-coral transition-colors font-medium"
      >
        Gallery
      </a>
      <a 
        href="/about" 
        class="px-4 py-3 rounded-lg text-slate-700 hover:bg-coral/10 hover:text-coral transition-colors font-medium"
      >
        About
      </a>
      <a 
        href="/faqs" 
        class="px-4 py-3 rounded-lg text-slate-700 hover:bg-coral/10 hover:text-coral transition-colors font-medium"
      >
        FAQs
      </a>
      <div class="border-t border-slate-200 pt-4 mt-2">
        <p class="px-4 text-xs uppercase font-bold text-slate-500 mb-3">Contact</p>
        <a 
          href={`tel:${"+254722206289"}`} 
          class="px-4 py-2 rounded-lg text-slate-700 hover:bg-coral/10 hover:text-coral transition-colors text-sm flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.83l.722 4.449a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.449.722a1 1 0 01.83.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
          Call +254722206289
        </a>
      </div>
    </nav>
  </div>
</div>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      const isHidden = mobileMenu.classList.contains('hidden');
      
      if (isHidden) {
        mobileMenu.classList.remove('hidden');
        menuIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
      } else {
        mobileMenu.classList.add('hidden');
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
      }
    });

    // Close menu when clicking a link
    const links = mobileMenu.querySelectorAll('a');
    links.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
      });
    });
  }
</script>