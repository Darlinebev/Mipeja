const conferenceData = {
  title: "Executive Conference Center",
  description: "Our modern conference facilities are designed to inspire productivity and collaboration. Equipped with high-speed WiFi, state-of-the-art audiovisual equipment, and ergonomic seating, it's the ideal venue for workshops, seminars, and corporate strategy sessions.",
  capacity: "Up to 100 People",
  images: [
    "https://images.unsplash.com/photo-1431540015161-0bf868a2d407?w=800&h=500&fit=crop",
    "https://images.unsplash.com/photo-1517457373958-b7bdd458ad20?w=800&h=500&fit=crop",
    "https://images.unsplash.com/photo-1505373633560-8206eba4659b?w=800&h=500&fit=crop"
  ],
  features: [
    "High-speed Fiber WiFi",
    "Projector & Motorized Screen",
    "Professional Sound System",
