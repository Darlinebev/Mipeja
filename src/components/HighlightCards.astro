---
interface Props {
  bookingUrl?: string;
}

const { bookingUrl = "#" } = Astro.props;

const highlights = [
  {
    id: "accommodation",
    title: "Accommodation",
    description:
      "Relax in style—our rooms blend comfort, elegance, and modern amenities for the perfect stay.",
    image:
      "https://images.unsplash.com/photo-1631049307264-da0ec9d70304?w=600&h=400&fit=crop",
    link: "/rooms",
  },
  {
    id: "dining",
    title: "Dining",
    description:
      "Savor every moment—experience gourmet flavors and local specialties at our signature restaurant.",
    image:
      "https://images.unsplash.com/photo-1546069901-ba9599a7e63c?w=600&h=400&fit=crop",
    link: "#dining",
  },
  {
    id: "conference",
    title: "Conference Facilities",
    description:
      "Connect and create—state-of-the-art spaces designed for impactful meetings, events, and celebrations.",
    image:
      "https://images.unsplash.com/photo-1552664730-d307ca884978?w=600&h=400&fit=crop",
    link: "#amenities",
  },
];
---

<section class="py-24 md:py-32 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Title -->
    <div class="text-center mb-16">
      <p class="text-[12px] uppercase tracking-[0.4em] text-deep-teal font-bold mb-6 animate-fade-in-down">Experience</p>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-display text-charcoal-gray leading-tight animate-fade-in-up">
        Hotel Highlights
      </h2>
    </div>

    <!-- Grid of Highlight Cards -->
    <div class="grid md:grid-cols-3 gap-8 lg:gap-10">
      {
        highlights.map((card, index) => (
          <div
            class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-2xl transition-all duration-500 reveal"
            style={`animation-delay: ${index * 0.15}s`}
          >
            <!-- Background Image Container -->
            <div class="relative h-80 md:h-96 overflow-hidden bg-charcoal-gray">
              <img
                src={card.image}
                alt={card.title}
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700 ease-out"
              />
              <!-- Dark Overlay Gradient -->
              <div class="absolute inset-0 bg-gradient-to-t from-charcoal-gray via-charcoal-gray/50 to-transparent opacity-90 group-hover:opacity-95 transition-opacity duration-500"></div>
            </div>

            <!-- Content Container -->
            <div class="absolute inset-0 flex flex-col justify-between p-8 text-white">
              <!-- Top spacing for image -->
              <div></div>

              <!-- Card Content at bottom -->
              <div class="space-y-6 transform transition-all duration-500">
                <div class="space-y-3">
                  <h3 class="text-3xl md:text-4xl font-display font-bold leading-tight group-hover:text-gold-rich transition-colors duration-300">
                    {card.title}
                  </h3>
                  <p class="text-white/90 text-base md:text-lg leading-relaxed">
                    {card.description}
                  </p>
                </div>

                <!-- Explore Button -->
                <div>
                  <a
                    href={card.link}
                    class="inline-flex items-center justify-center bg-gold-rich hover:bg-gold-rich/90 text-charcoal-gray px-8 py-3 text-sm font-accent font-bold uppercase tracking-[0.2em] transition-all duration-300 rounded-sm shadow-lg hover:shadow-xl hover:-translate-y-0.5 transform hover:glow"
                  >
                    Explore
                  </a>
                </div>
              </div>
            </div>

            <!-- Subtle border highlight on hover -->
            <div class="absolute inset-0 border border-gold-rich/0 group-hover:border-gold-rich/30 rounded-lg transition-all duration-500 pointer-events-none"></div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Glow effect for button hover */
  .hover\:glow:hover {
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.6), 0 4px 15px rgba(212, 175, 55, 0.3);
  }

  /* Ensure reveal animation triggers */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s cubic-bezier(0.5, 0, 0, 1) forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
