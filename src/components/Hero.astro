---
const { hotel, bookingUrl } = Astro.props;

// Keep existing images or placeholders
const slides = [
	{
		image: '/images/mipeja-hero.jpg', 
		alt: 'Luxury Hotel Stay'
	},
	{
		image: '/images/hero-bg.jpg',
		alt: 'Comfortable Room'
	},
	{
		image: '/images/inspo.jpg',
		alt: 'Relaxing Vibes'
	}
];
---

<div class="relative h-screen w-full overflow-hidden">
    <!-- Background Slider -->
    <div class="absolute inset-0 z-0">
        {slides.map((slide, index) => (
            <div class={`slide absolute inset-0 transition-opacity duration-1000 ease-in-out ${index === 0 ? 'opacity-100' : 'opacity-0'}`} data-slide={index}>
                <img src={slide.image} alt={slide.alt} class="w-full h-full object-cover" />
                <div class="absolute inset-0 bg-black/40"></div>
            </div>
        ))}
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 flex flex-col justify-center h-full px-6 md:px-12 max-w-7xl mx-auto">
        <div class="max-w-3xl space-y-8 pb-32">
            <h1 class="text-5xl md:text-7xl lg:text-8xl font-display font-medium text-white leading-tight">
                Find Your <br/> Perfect Stay.
            </h1>
            <p class="text-white/80 text-lg md:text-xl font-light leading-relaxed max-w-xl">
                Book boutique hotels, private villas, stays more permissions & minted experiences. Tailored to your ease, travel with taste.
            </p>
            <div class="flex items-center gap-4 pt-4">
                 <a href={bookingUrl} class="inline-flex items-center gap-2 bg-white text-theme-black px-8 py-4 rounded-full font-semibold hover:bg-theme-gold hover:text-white transition-all group">
                    Booking Now
                    <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
                 </a>
            </div>
        </div>

        <!-- Float Indicators -->
        <div class="absolute right-12 bottom-48 flex gap-4 text-white/60 text-sm font-mono hidden md:flex">
             <span>01</span>
             <div class="w-12 h-[1px] bg-white/40 self-center"></div>
             <span>03</span>
        </div>
    </div>

    <!-- Booking Bar -->
    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 w-[90%] max-w-6xl z-20">
        <div class="bg-white rounded-full p-2 md:p-3 shadow-2xl flex flex-col md:flex-row items-stretch justify-between gap-4 md:gap-0">
            
            <div class="flex-1 w-full md:w-auto px-8 py-3 md:border-r border-gray-100 relative group cursor-pointer hover:bg-gray-50 rounded-full md:rounded-l-full md:rounded-r-none transition-colors">
                <label class="block text-[10px] uppercase tracking-wider text-gray-500 font-bold mb-1">Room</label>
                <div class="flex items-center justify-between gap-4">
                    <span class="text-theme-black font-semibold text-sm">Fine Log</span>
                    <i class="fa-solid fa-chevron-down text-[10px] text-gray-400"></i>
                </div>
            </div>

            <div class="flex-1 w-full md:w-auto px-8 py-3 md:border-r border-gray-100 relative group cursor-pointer hover:bg-gray-50 transition-colors">
                <label class="block text-[10px] uppercase tracking-wider text-gray-500 font-bold mb-1">Check In</label>
                 <div class="flex items-center justify-between gap-4">
                    <span class="text-theme-black font-semibold text-sm">10 Mar 2024</span>
                    <i class="fa-regular fa-calendar text-[10px] text-gray-400"></i>
                </div>
            </div>

            <div class="flex-1 w-full md:w-auto px-8 py-3 md:border-r border-gray-100 relative group cursor-pointer hover:bg-gray-50 transition-colors">
                <label class="block text-[10px] uppercase tracking-wider text-gray-500 font-bold mb-1">Check Out</label>
                 <div class="flex items-center justify-between gap-4">
                    <span class="text-theme-black font-semibold text-sm">15 Mar 2024</span>
                    <i class="fa-regular fa-calendar text-[10px] text-gray-400"></i>
                </div>
            </div>

            <div class="flex-1 w-full md:w-auto px-8 py-3 relative group cursor-pointer hover:bg-gray-50 rounded-full md:rounded-r-full md:rounded-l-none transition-colors">
                <label class="block text-[10px] uppercase tracking-wider text-gray-500 font-bold mb-1">Guests</label>
                 <div class="flex items-center justify-between gap-4">
                    <span class="text-theme-black font-semibold text-sm">04 Adults</span>
                    <i class="fa-solid fa-chevron-down text-[10px] text-gray-400"></i>
                </div>
            </div>

            <div class="p-1 flex-shrink-0">
                <a href={bookingUrl} class="flex items-center justify-center w-full md:w-auto bg-theme-black text-white px-8 py-4 rounded-full font-bold uppercase tracking-wide text-xs hover:bg-theme-gold transition-colors shadow-lg h-full">
                    Check Availability
                </a>
            </div>

        </div>
    </div>
</div>

<script>
    const slides = document.querySelectorAll('.slide');
    let currentSlide = 0;

    const nextSlide = () => {
        if (!slides.length) return;
        slides[currentSlide].classList.remove('opacity-100');
        slides[currentSlide].classList.add('opacity-0');
        currentSlide = (currentSlide + 1) % slides.length;
        slides[currentSlide].classList.remove('opacity-0');
        slides[currentSlide].classList.add('opacity-100');
    };

    setInterval(nextSlide, 5000);
</script>
