---
import BaseLayout from "../layouts/BaseLayout.astro";
import MobileNav from "../components/MobileNav.astro";
import Hero from "../components/Hero.astro";
import Header from "../components/Header.astro";
import { hotel } from "../data/hotel";

const pageTitle = `${hotel.name} | Boutique Stay in ${hotel.location}`;
const pageDescription = `${hotel.name} in ${hotel.location} offers warm hospitality, stylish rooms, and a secure booking experience. Discover rooms, amenities, and book your stay.`;
const bookingUrl = hotel.bookingUrl;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen">
		<Header bookingUrl={bookingUrl} />

		<Hero hotel={hotel} bookingUrl={bookingUrl} />

        <!-- Stats Bar -->
        <div class="bg-white border-b border-beige">
            <div class="max-w-7xl mx-auto px-6 py-4 flex flex-wrap items-center justify-between gap-6 text-[10px] uppercase tracking-[0.2em] font-bold text-charcoal/60">
                <div class="flex items-center gap-8">
                    <span>Since 1995 — 30 Years of operation</span>
                    <a href="/about" class="text-charcoal border-b border-gold-dark/30 hover:border-gold pb-1 transition-all">Mipeja Story →</a>
                </div>
                <div class="flex items-center gap-8">
                    <span>+2.4k Bookings</span>
                    <span class="flex items-center gap-2"><span class="text-charcoal">4.9/5</span> ★ 3.5k Reviews</span>
                </div>
            </div>
        </div>

		<!-- Iconic Value Props -->
		<section class="max-w-7xl mx-auto px-6 py-24">
			<div class="grid grid-cols-2 lg:grid-cols-4 gap-12 text-center">
				<div class="space-y-4 group">
					<div class="w-12 h-12 mx-auto mb-6 text-gold group-hover:scale-110 transition-transform">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    </div>
					<h3 class="font-display text-lg font-bold uppercase tracking-widest text-brown">Located in the heart</h3>
					<p class="text-xs text-charcoal/60 leading-relaxed uppercase tracking-widest">Ideally located for easy access and convenience.</p>
				</div>
				<div class="space-y-4 group">
					<div class="w-12 h-12 mx-auto mb-6 text-gold group-hover:scale-110 transition-transform">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
                    </div>
					<h3 class="font-display text-lg font-bold uppercase tracking-widest text-brown">Luxury & Comfort</h3>
					<p class="text-xs text-charcoal/60 leading-relaxed uppercase tracking-widest">Experience a luxurious, modern, and fully equipped space.</p>
				</div>
				<div class="space-y-4 group">
					<div class="w-12 h-12 mx-auto mb-6 text-gold group-hover:scale-110 transition-transform">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                    </div>
					<h3 class="font-display text-lg font-bold uppercase tracking-widest text-brown">Friendly Staff</h3>
					<p class="text-xs text-charcoal/60 leading-relaxed uppercase tracking-widest">Our team ensures a delightful and welcoming stay.</p>
				</div>
				<div class="space-y-4 group">
					<div class="w-12 h-12 mx-auto mb-6 text-gold group-hover:scale-110 transition-transform">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    </div>
					<h3 class="font-display text-lg font-bold uppercase tracking-widest text-brown">Best Prices</h3>
					<p class="text-xs text-charcoal/60 leading-relaxed uppercase tracking-widest">Enjoy unbeatable prices with fantastic offers just for you.</p>
				</div>
			</div>
		</section>

		<!-- About Section (Larita Style Split) -->
		<section class="max-w-7xl mx-auto px-6 py-24 border-t border-beige">
			<div class="grid lg:grid-cols-2 gap-20 items-center">
				<div class="grid grid-cols-2 gap-4">
					<div class="aspect-[3/4] overflow-hidden">
                        <img src="/images/mipeja-hero.jpg" alt="Hotel exterior" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700" />
                    </div>
					<div class="aspect-[3/4] overflow-hidden mt-12">
                        <img src="/images/lounge.svg" alt="Hotel lounge" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700" />
                    </div>
				</div>
				<div class="space-y-8">
					<div>
                        <p class="text-[10px] uppercase tracking-[0.4em] text-gold mb-4 font-bold">Welcome to Mipeja</p>
                        <h2 class="text-5xl md:text-6xl font-display text-brown leading-tight">Luxury hotel in the heart of the city.</h2>
                    </div>
					<p class="text-charcoal/70 leading-relaxed max-w-lg">
						{hotel.name}, in the heart of {hotel.location}, offers premium facilities, perfect for relaxation and indulgence. Our friendly staff ensures a seamless, personalized experience, with stunning city views. Discover true luxury and hospitality at Mipeja.
					</p>
					<div>
						<a href="/about" class="inline-flex items-center justify-center bg-gold/10 border border-gold px-8 py-4 text-xs font-bold text-gold uppercase tracking-[0.2em] hover:bg-gold hover:text-white transition-all">
							Read More →
						</a>
					</div>
				</div>
			</div>
		</section>

        <!-- Trust Badges -->
        <div class="bg-white py-12 border-y border-beige">
            <div class="max-w-7xl mx-auto px-6 flex flex-wrap justify-center items-center gap-16 opacity-50 grayscale">
                <div class="flex items-center gap-3">
                    <span class="text-2xl font-bold">B.</span>
                    <div class="text-[10px] uppercase tracking-widest">
                        <p class="font-bold">4.9/5 Excellent</p>
                        <p>3.5k Reviews on Booking</p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <span class="text-2xl font-bold">a</span>
                    <div class="text-[10px] uppercase tracking-widest">
                        <p class="font-bold">5/5 Excellent</p>
                        <p>4.1k Reviews on Agoda</p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <span class="text-2xl font-bold text-green-600">OO</span>
                    <div class="text-[10px] uppercase tracking-widest">
                        <p class="font-bold">4.8/5 Good</p>
                        <p>2.4k Reviews on Tripadvisor</p>
                    </div>
                </div>
            </div>
        </div>

		<!-- Room Showcase (Prominent) -->
		<section id="rooms" class="py-32 bg-beige/50 overflow-hidden">
			<div class="max-w-7xl mx-auto px-6">
				<div class="text-center mb-20 space-y-4">
					<p class="text-[10px] uppercase tracking-[0.4em] text-gold font-bold">Exquisite and Luxurious</p>
					<h2 class="text-5xl md:text-6xl font-display text-brown">Room and suite collection</h2>
				</div>
				
                <div class="relative group">
                    <div class="grid lg:grid-cols-[0.8fr_1.2fr] bg-white shadow-2xl overflow-hidden min-h-[500px]">
                        <div class="p-12 md:p-20 flex flex-col justify-center space-y-8 order-2 lg:order-1">
                            <div class="space-y-2">
                                <p class="text-[10px] uppercase tracking-[0.2em] text-charcoal/40 font-bold">From: <span class="text-brown text-sm ml-2">{hotel.rooms[0].price}</span><span class="text-[8px] text-charcoal/40 ml-1">/NIGHT</span></p>
                                <h3 class="text-4xl font-display text-brown">{hotel.rooms[0].name}</h3>
                            </div>
                            <p class="text-charcoal/70 leading-relaxed">
                                Cozy and modern, this room offers essential amenities for a comfortable stay, perfect for solo travelers or couples seeking relaxation.
                            </p>
                            <div class="grid grid-cols-2 gap-y-4 text-[10px] uppercase tracking-widest font-bold text-charcoal/60">
                                <div class="flex items-center gap-3">
                                    <span class="text-gold">R</span> Room Size 28 m²
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="text-gold">S</span> Street View
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="text-gold">B</span> 1 King Bed
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="text-gold">N</span> Smoking - NO
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="text-gold">A</span> 2 Adults - 1 Child
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="text-gold">C</span> Breakfast - YES
                                </div>
                            </div>
                            <div class="flex gap-4 pt-4">
                                <a href={bookingUrl} class="bg-brown px-8 py-4 text-xs font-bold text-white uppercase tracking-[0.2em] hover:bg-gold transition-all">Book Now</a>
                                <a href="/rooms" class="border border-charcoal/10 px-8 py-4 text-xs font-bold text-charcoal uppercase tracking-[0.2em] hover:border-gold hover:text-gold transition-all">View Room →</a>
                            </div>
                        </div>
                        <div class="relative overflow-hidden order-1 lg:order-2">
                            <img src={hotel.rooms[0].image} alt={hotel.rooms[0].name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000" />
                        </div>
                    </div>
                    
                    <!-- Prev/Next buttons (visual only for now) -->
                    <div class="absolute top-1/2 -left-4 -translate-y-1/2 z-20 hidden lg:block">
                        <button class="w-12 h-12 rounded-full bg-white shadow-lg flex items-center justify-center text-charcoal hover:bg-gold hover:text-white transition-all">←</button>
                    </div>
                    <div class="absolute top-1/2 -right-4 -translate-y-1/2 z-20 hidden lg:block">
                        <button class="w-12 h-12 rounded-full bg-white shadow-lg flex items-center justify-center text-charcoal hover:bg-gold hover:text-white transition-all">→</button>
                    </div>
                </div>
			</div>
		</section>

		<!-- Facilities and Amenities -->
		<section id="amenities" class="py-32 bg-white">
			<div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-20 space-y-4">
					<p class="text-[10px] uppercase tracking-[0.4em] text-gold font-bold">Modern and Comfortable</p>
					<h2 class="text-5xl md:text-6xl font-display text-brown">Facilities and amenities</h2>
				</div>
                
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-16 gap-y-12">
                     {[
                        { title: "High Speed Wifi", desc: "Enjoy seamless, high-speed internet access throughout the hotel.", icon: "W" },
                        { title: "Parking Space", desc: "Ample and secure parking space provided for all hotel guests.", icon: "P" },
                        { title: "Restaurant & Bar", desc: "Savor gourmet dishes and cocktails at our elegant restaurant and bar.", icon: "R" },
                        { title: "Spa Center", desc: "Indulge in a variety of relaxing and rejuvenating treatments at our spa.", icon: "S" },
                        { title: "Fitness Center", desc: "Stay active with state-of-the-art fitness equipment in our modern gym.", icon: "F" },
                        { title: "Swimming Pool", desc: "Refresh and unwind in our pristine outdoor swimming pool.", icon: "L" }
                    ].map(item => (
                        <div class="flex gap-6 group">
                            <div class="flex-shrink-0 w-12 h-12 bg-beige flex items-center justify-center text-gold font-bold text-xl group-hover:bg-gold group-hover:text-white transition-all">
                                {item.icon}
                            </div>
                            <div class="space-y-2">
                                <h3 class="font-display text-xl font-bold text-brown">{item.title}</h3>
                                <p class="text-xs text-charcoal/60 leading-relaxed uppercase tracking-wider">{item.desc}</p>
                            </div>
                        </div>
                    ))}
                </div>
			</div>
		</section>

		<!-- Video/Explore Section -->
		<section class="relative h-[600px] overflow-hidden flex items-center justify-center">
             <img src="/images/mipeja-hero.jpg" alt="Hotel Video Preview" class="absolute inset-0 w-full h-full object-cover brightness-50" />
			 <div class="relative z-10 text-center space-y-8">
                <p class="text-[10px] uppercase tracking-[0.4em] text-white font-bold">Hotel Video</p>
                <h2 class="text-5xl md:text-7xl font-display text-white italic tracking-wider">Explore {hotel.name}</h2>
                <button class="w-20 h-20 rounded-full border border-white/30 flex items-center justify-center text-white hover:bg-gold hover:border-gold transition-all group">
                    <svg class="w-8 h-8 fill-current group-hover:scale-110 transition-transform" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"></path></svg>
                </button>
             </div>
		</section>

		<footer class="bg-charcoal text-white py-24 border-t border-white/5 font-body">
			<div class="max-w-7xl mx-auto px-6">
                <div class="grid lg:grid-cols-4 gap-16">
                    <div class="col-span-2 space-y-8">
                        <div>
                            <p class="font-display text-3xl font-bold tracking-widest uppercase mb-4">{hotel.name}</p>
                            <p class="text-xs opacity-60 uppercase tracking-[0.2em] max-w-sm leading-relaxed">{hotel.tagline}</p>
                        </div>
                        <div class="flex gap-6">
                            {hotel.socials?.map((social) => (
                                <a href={social.url} target="_blank" rel="noreferrer" class="text-white hover:text-gold transition-colors text-xs uppercase tracking-widest">
                                    {social.label}
                                </a>
                            ))}
                        </div>
                    </div>
                    <div class="space-y-6">
                        <p class="text-[10px] uppercase tracking-[0.3em] font-bold text-gold">Contact Us</p>
                        <div class="space-y-4 text-xs uppercase tracking-widest opacity-70">
                            <p>{hotel.location}</p>
                            <p>{hotel.phone}</p>
                            <p>{hotel.email}</p>
                        </div>
                    </div>
                    <div class="space-y-6">
                        <p class="text-[10px] uppercase tracking-[0.3em] font-bold text-gold">Quick Links</p>
                        <nav class="flex flex-col gap-4 text-xs uppercase tracking-widest opacity-70">
                            <a href="/rooms" class="hover:text-gold transition-colors">Rooms & Suites</a>
                            <a href="/amenities" class="hover:text-gold transition-colors">Experience</a>
                            <a href="/about" class="hover:text-gold transition-colors">Our Story</a>
                            <a href="/contact" class="hover:text-gold transition-colors">Get in touch</a>
                        </nav>
                    </div>
                </div>
				<div class="mt-20 pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6 text-[10px] uppercase tracking-[0.3em] opacity-40">
					<p>© {new Date().getFullYear()} {hotel.name}. All rights reserved.</p>
                    <div class="flex gap-8">
                        <span>Terms & Conditions</span>
                        <span>Privacy Policy</span>
                    </div>
				</div>
			</div>
		</footer>

        <!-- Mobile Sticky CTA (Reservation) -->
        <div class="fixed bottom-0 left-0 right-0 p-4 bg-white/90 backdrop-blur-md border-t border-beige md:hidden z-50">
			<a class="w-full bg-gold py-4 flex items-center justify-center text-xs font-bold text-charcoal uppercase tracking-[0.2em]" href={bookingUrl} target="_blank" rel="noreferrer">
				Reservation
			</a>
		</div>

	</div>
</BaseLayout>

