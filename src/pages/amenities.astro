---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";
import Header from "../components/Header.astro";

const facilities = [
	{ title: "Restaurant", img: "/images/restaurant.svg" },
	{ title: "Shared lounge / TV area", img: "/images/lounge.svg" },
	{ title: "Terrace & outdoor furniture", img: "/images/hero.svg" },
	{ title: "Free private parking", img: "/images/mipeja-hero.jpg" },
	{ title: "Non-smoking rooms", img: "/images/room-deluxe.svg" },
	{ title: "Designated smoking area", img: "/images/room-family.svg" },
];

const pageTitle = `Amenities | ${hotel.name}`;
const pageDescription = `Discover the amenities and facilities at ${hotel.name} in ${hotel.location}.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen bg-beige/30">
		<Header bookingUrl={hotel.bookingUrl} />

		<!-- Subpage Hero -->
		<section class="relative h-[60vh] flex items-center justify-center overflow-hidden">
			<img src="/images/lounge.svg" alt="Amenities" class="absolute inset-0 w-full h-full object-cover brightness-50" />
			<div class="relative z-10 text-center space-y-4">
				<p class="text-[10px] uppercase tracking-[0.4em] text-white font-bold">Experience & Luxury</p>
				<h1 class="text-6xl md:text-8xl font-display text-white italic">Amenities</h1>
			</div>
		</section>

		<!-- Facilities (Image Cards) -->
		<section class="max-w-7xl mx-auto px-6 py-32">
			<div class="text-center mb-20 space-y-4">
				<p class="text-[10px] uppercase tracking-[0.4em] text-gold font-bold">Premium Services</p>
				<h2 class="text-5xl md:text-6xl font-display text-brown">Our Facilities</h2>
			</div>

			<div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-3">
				{facilities.map((f) => (
					<div class="group space-y-6">
						<div class="aspect-[4/5] overflow-hidden bg-charcoal">
							<img src={f.img} alt={f.title} class="w-full h-full object-cover grayscale opacity-80 group-hover:grayscale-0 group-hover:opacity-100 group-hover:scale-105 transition-all duration-700" loading="lazy" />
						</div>
						<div class="space-y-2">
							<h3 class="font-display text-2xl font-bold text-brown">{f.title}</h3>
							<p class="text-[10px] uppercase tracking-[0.2em] text-charcoal/60 leading-relaxed font-bold">Comprehensive guest services</p>
						</div>
					</div>
				))}
			</div>
		</section>

		<!-- Room Features & Safety Details -->
		<section class="bg-white py-32 border-t border-beige">
			<div class="max-w-7xl mx-auto px-6">
				<div class="grid lg:grid-cols-2 gap-24">
					<!-- Room Features -->
					<div class="space-y-12">
						<div class="space-y-4">
							<p class="text-[10px] uppercase tracking-[0.4em] text-gold font-bold">Personal Comfort</p>
							<h2 class="text-4xl font-display text-brown italic">Room Features</h2>
						</div>
						<div class="grid sm:grid-cols-2 gap-x-12 gap-y-6">
							{["Air conditioning", "Flat-screen TV", "Free WiFi", "Private bathroom", "Workspace desk", "Wardrobe"].map((item) => (
								<div class="flex items-center gap-4 text-xs font-bold uppercase tracking-[0.2em] text-charcoal/70 border-b border-beige pb-4">
									<span class="text-gold">✦</span>
									{item}
								</div>
							))}
						</div>
					</div>

					<!-- Safety & Security -->
					<div class="space-y-12">
						<div class="space-y-4">
							<p class="text-[10px] uppercase tracking-[0.4em] text-gold font-bold">Your Well-being</p>
							<h2 class="text-4xl font-display text-brown italic">Safety & Security</h2>
						</div>
						<div class="grid sm:grid-cols-2 gap-x-12 gap-y-6">
							{hotel.safety.map((item) => (
								<div class="flex items-center gap-4 text-xs font-bold uppercase tracking-[0.2em] text-charcoal/70 border-b border-beige pb-4">
									<span class="text-gold">✦</span>
									{item}
								</div>
							))}
						</div>
					</div>
				</div>
			</div>
		</section>

		<footer class="bg-charcoal text-white py-24 border-t border-white/5 font-body">
			<div class="max-w-7xl mx-auto px-6">
				<div class="grid lg:grid-cols-4 gap-16">
					<div class="col-span-2 space-y-8">
						<div>
							<p class="font-display text-3xl font-bold tracking-widest uppercase mb-4">{hotel.name}</p>
							<p class="text-xs opacity-60 uppercase tracking-[0.2em] max-w-sm leading-relaxed">{hotel.tagline}</p>
						</div>
					</div>
					<div class="space-y-6">
						<p class="text-[10px] uppercase tracking-[0.3em] font-bold text-gold">Contact Us</p>
						<div class="space-y-4 text-xs uppercase tracking-widest opacity-70">
							<p>{hotel.location}</p>
							<p>{hotel.phone}</p>
							<p>{hotel.email}</p>
						</div>
					</div>
					<div class="space-y-6">
						<p class="text-[10px] uppercase tracking-[0.3em] font-bold text-gold">Quick Links</p>
						<nav class="flex flex-col gap-4 text-xs uppercase tracking-widest opacity-70">
							<a href="/rooms" class="hover:text-gold transition-colors">Rooms & Suites</a>
							<a href="/about" class="hover:text-gold transition-colors">Our Story</a>
							<a href="/contact" class="hover:text-gold transition-colors">Get in touch</a>
						</nav>
					</div>
				</div>
				<div class="mt-20 pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6 text-[10px] uppercase tracking-[0.3em] opacity-40">
					<p>© {new Date().getFullYear()} {hotel.name}. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</div>
</BaseLayout>

