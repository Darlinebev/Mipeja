---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";
import Header from "../components/Header.astro";
import AirConditioning from "../components/icons/AirConditioning.astro";
import Tv from "../components/icons/Tv.astro";
import WifiIcon from "../components/icons/Wifi.astro";
import Bathroom from "../components/icons/Bathroom.astro";
import Desk from "../components/icons/Desk.astro";
import Wardrobe from "../components/icons/Wardrobe.astro";

const facilities = [
	{ title: "Restaurant", img: "/images/restaurant.svg" },
	{ title: "Shared lounge / TV area", img: "/images/lounge.svg" },
	{ title: "Terrace & outdoor furniture", img: "/images/hero.svg" },
	{ title: "Free private parking", img: "/images/mipeja-hero.jpg" },
	{ title: "Non-smoking rooms", img: "/images/room-deluxe.svg" },
	{ title: "Designated smoking area", img: "/images/room-family.svg" },
];

const amenitiesA = [
	"Air conditioning",
	"Free WiFi",
	"WiFi",
	"WiFi available in all areas",
	"Internet services",
	"Non-smoking rooms",
	"Designated smoking area",
	"Room service",
	"Food can be delivered to guest accommodation",
	"Restaurant",
	"Outdoor furniture",
	"Terrace",
	"Shared lounge / TV area",
	"Parking",
	"Parking on site",
	"Free parking",
	"Private parking"
];

const amenitiesB = [
	"24-hour front desk",
	"24-hour security",
	"CCTV in common areas",
	"Security alarm",
	"Fire extinguishers"
];

const amenitiesC = [
	"Guest accommodation is disinfected between stays",
	"Guest accommodation sealed after cleaning",
	"Property is cleaned by professional cleaning companies",
	"Use of cleaning chemicals effective against Coronavirus",
	"Linens, towels and laundry washed according to local authority guidelines",
	"Guests can cancel cleaning services during their stay"
];

const pageTitle = `Amenities | ${hotel.name}`;
const pageDescription = `Discover the amenities and facilities at ${hotel.name} in ${hotel.location}.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen bg-beige/30">
		<Header bookingUrl={hotel.bookingUrl} />

		<!-- Subpage Hero -->
		<section class="relative h-[60vh] flex items-center justify-center overflow-hidden">
			<img src="/images/lounge.svg" alt="Amenities" class="absolute inset-0 w-full h-full object-cover brightness-50" />
			<div class="relative z-10 text-center space-y-4">
				<p class="text-[10px] uppercase tracking-[0.4em] text-white font-bold">Experience & Luxury</p>
				<h1 class="text-6xl md:text-8xl font-display text-white italic">Amenities</h1>
			</div>
		</section>

		<!-- Facilities (Image Cards) -->
		<section class="max-w-7xl mx-auto px-6 py-32">
			<div class="text-center mb-20 space-y-4">
				<p class="text-[10px] uppercase tracking-[0.4em] text-terracotta font-bold">Premium Services</p>
				<h2 class="text-5xl md:text-6xl font-display text-brown">Our Facilities</h2>
			</div>

			<div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-3">
				{facilities.map((f) => (
					<div class="group space-y-6">
						<div class="aspect-[4/5] overflow-hidden bg-charcoal">
							<img src={f.img} alt={f.title} class="w-full h-full object-cover grayscale opacity-80 group-hover:grayscale-0 group-hover:opacity-100 group-hover:scale-105 transition-all duration-700" loading="lazy" />
						</div>
						<div class="space-y-2">
							<h3 class="font-display text-2xl font-bold text-brown">{f.title}</h3>
							<p class="text-[10px] uppercase tracking-[0.2em] text-charcoal/60 leading-relaxed font-bold">Comprehensive guest services</p>
						</div>
					</div>
				))}
			</div>
		</section>

		<!-- Amenities Details -->
		<section class="bg-white py-32 border-t border-beige">
			<div class="max-w-7xl mx-auto px-6">
				<div class="grid lg:grid-cols-3 gap-24">
					<!-- Room Features & Guest Amenities -->
					<div class="space-y-12">
						<div class="space-y-4">
							<p class="text-[10px] uppercase tracking-[0.4em] text-terracotta font-bold">Comfort & Convenience</p>
							<h2 class="text-4xl font-display text-brown italic">Room Features & Guest Amenities</h2>
							<p class="text-sm text-charcoal/70">These are the comfort + convenience perks your guests actually feel.</p>
						</div>
						<div class="grid sm:grid-cols-2 gap-x-12 gap-y-6">
							{amenitiesA.map((item) => (
								<div class="flex items-center gap-4 text-xs font-bold uppercase tracking-[0.2em] text-charcoal/70 border-b border-beige pb-4">
									<span class="text-terracotta">✦</span>
									{item}
								</div>
							))}
						</div>
					</div>

					<!-- Safety & Security -->
					<div class="space-y-12">
						<div class="space-y-4">
							<p class="text-[10px] uppercase tracking-[0.4em] text-terracotta font-bold">Peace of Mind</p>
							<h2 class="text-4xl font-display text-brown italic">Safety & Security</h2>
							<p class="text-sm text-charcoal/70">This is your "peace of mind" package. Very important for trust.</p>
						</div>
						<div class="grid sm:grid-cols-2 gap-x-12 gap-y-6">
							{amenitiesB.map((item) => (
								<div class="flex items-center gap-4 text-xs font-bold uppercase tracking-[0.2em] text-charcoal/70 border-b border-beige pb-4">
									<span class="text-terracotta">✦</span>
									{item}
								</div>
							))}
						</div>
					</div>

					<!-- Cleanliness, Hygiene & Health Measures -->
					<div class="space-y-12">
						<div class="space-y-4">
							<p class="text-[10px] uppercase tracking-[0.4em] text-terracotta font-bold">Clean & Safe</p>
							<h2 class="text-4xl font-display text-brown italic">Cleanliness, Hygiene & Health Measures</h2>
							<p class="text-sm text-charcoal/70">Your anti-germ, hotel-is-not-playing-around section.</p>
						</div>
						<div class="grid sm:grid-cols-2 gap-x-12 gap-y-6">
							{amenitiesC.map((item) => (
								<div class="flex items-center gap-4 text-xs font-bold uppercase tracking-[0.2em] text-charcoal/70 border-b border-beige pb-4">
									<span class="text-terracotta">✦</span>
									{item}
								</div>
							))}
						</div>
					</div>
				</div>
			</div>
		</section>


	</div>
</BaseLayout>

