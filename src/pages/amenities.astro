---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";
import Header from "../components/Header.astro";
import FacilityCard from "../components/FacilityCard.astro";
import AmenitiesTabs from "../components/AmenitiesTabs.astro";

const facilities = [
	{
		title: "24-Hour Front Desk",
		image: "/images/eighteen.png",
		description: "Round-the-clock assistance and concierge services",
		detailedDescription: "Our dedicated front desk team is available 24/7 to assist with check-ins, check-outs, reservations, and any inquiries. Experience personalized service and immediate support whenever you need it.",
		metadata: {
			capacity: "Always Available",
			features: ["24/7 Support", "Concierge Services", "Multilingual Staff"],
			lastUpdated: "Jan 2024"
		}
	},
	{
		title: "Room Service",
		image: "/images/nineteen.png",
		description: "In-room dining with a wide selection of meals",
		detailedDescription: "Enjoy delicious meals delivered directly to your room at your convenience. Our room service offers a diverse menu featuring local Kenyan cuisine and international dishes, available throughout the day.",
		metadata: {
			capacity: "24 Hours",
			features: ["Diverse Menu", "Quick Delivery", "Special Dietary Options"],
			lastUpdated: "Jan 2024"
		}
	},
	{
		title: "Common Areas",
		image: "/images/two.png",
		description: "Spacious shared spaces for relaxation and socializing",
		detailedDescription: "Our beautifully designed common areas provide comfortable spaces for guests to relax, read, or connect with fellow travelers. Featuring elegant furnishings and a welcoming atmosphere.",
		metadata: {
			capacity: "50+ guests",
			features: ["Comfortable Seating", "Reading Materials", "Social Spaces"],
			lastUpdated: "Jan 2024"
		}
	}
];

const pageTitle = `Amenities | ${hotel.name}`;
const pageDescription = `Discover the amenities and facilities at ${hotel.name} in ${hotel.location}.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen bg-theme-off-white">
		<Header bookingUrl={hotel.bookingUrl} theme="dark" />

		<!-- Restaurant & Conference Tabs -->
		<AmenitiesTabs />

		<!-- Facilities (Image Cards) -->
		<section class="max-w-7xl mx-auto px-4 sm:px-6 py-12 md:py-32 relative z-10 md:mt-[-60px]">
			<div class="text-center mb-12 md:mb-20 space-y-3 sm:space-y-4">
				<p class="text-[10px] uppercase tracking-[0.3em] sm:tracking-[0.4em] text-theme-gold font-bold">Premium Services</p>
				<h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-display text-theme-black">Our Facilities</h2>
			</div>

			<div class="grid gap-4 sm:gap-6 sm:grid-cols-2 lg:grid-cols-3 auto-rows-max facilities-grid">
				{facilities.map((facility, index) => (
					<div class="facility-item" style={`animation-delay: ${index * 0.1}s`}>
						<FacilityCard 
							title={facility.title}
							image={facility.image}
							description={facility.description}
							detailedDescription={facility.detailedDescription}
							metadata={facility.metadata}
						/>
					</div>
				))}
			</div>
		</section>

	</div>
</BaseLayout>

<style>
	.facility-item {
		opacity: 0;
		transform: translateY(30px);
		animation: fadeInUp 0.6s ease-out forwards;
	}

	@keyframes fadeInUp {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>

