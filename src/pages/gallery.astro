---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";

const pageTitle = `Gallery | ${hotel.name}`;
const pageDescription = `Gallery of photos from ${hotel.name} in ${hotel.location}. Rooms, amenities, and guest experiences.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen flex flex-col">
		<!-- Header -->
		<header class="sticky top-0 z-50 glass border-b-0 transition-all duration-300">
			<div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
				<a href="/" class="flex items-center gap-3">
					<div class="h-12 w-12 rounded-2xl bg-coral text-white flex items-center justify-center font-display text-xl font-bold shadow-soft">
						M
					</div>
					<div>
						<p class="text-xl font-display font-bold leading-none">{hotel.name}</p>
						<p class="text-xs text-slate-500 font-medium">{hotel.location}</p>
					</div>
				</a>
				<nav class="hidden md:flex items-center gap-2">
					<a href="/" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">Home</a>
					<a href="/rooms" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">Rooms</a>
					<a href="/amenities" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">Amenities</a>
					<a href="/gallery" class="px-4 py-2 rounded-full font-medium text-sm transition-all bg-coral text-white">Gallery</a>
					<a href="/faqs" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">FAQs</a>
				</nav>
				<a class="btn-primary py-2 px-6 text-sm shadow-none hover:shadow-soft" href={hotel.bookingUrl} target="_blank" rel="noreferrer">
					Book Now
				</a>
			</div>
		</header>

		<!-- Main Content -->
		<main class="flex-1">
			<!-- Hero -->
			<section class="mx-auto max-w-6xl px-6 py-20">
				<div class="text-center space-y-4 mb-16">
					<p class="kicker">Visual Tour</p>
					<h1 class="text-5xl sm:text-6xl font-display font-bold text-ink leading-tight">
						Gallery
					</h1>
					<p class="text-xl text-slate-600 max-w-2xl mx-auto">
						Explore the beauty and comfort of Mipeja Hotel through our photo gallery.
					</p>
				</div>

				<!-- Gallery Grid -->
				<div class="grid md:grid-cols-3 gap-6 auto-rows-[300px]">
					<!-- Featured Large -->
					<div class="md:col-span-2 md:row-span-2 rounded-3xl overflow-hidden shadow-soft hover:shadow-hover transition-all duration-300 group cursor-pointer">
						<img src="/images/hero.svg" alt="Hotel exterior" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
					</div>

					<!-- Rooms -->
					{hotel.rooms.map((room) => (
						<div class="rounded-3xl overflow-hidden shadow-soft hover:shadow-hover transition-all duration-300 group cursor-pointer">
							<img src={room.image} alt={room.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
						</div>
					))}

					<!-- Lounge -->
					<div class="rounded-3xl overflow-hidden shadow-soft hover:shadow-hover transition-all duration-300 group cursor-pointer">
						<img src="/images/lounge.svg" alt="Shared lounge" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
					</div>

					<!-- Restaurant -->
					<div class="md:col-span-2 rounded-3xl overflow-hidden shadow-soft hover:shadow-hover transition-all duration-300 group cursor-pointer">
						<img src="/images/restaurant.svg" alt="Restaurant" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
					</div>
				</div>

				<!-- CTA Section -->
				<div class="mt-16 card p-8 bg-gradient-to-r from-coral/10 to-teal/10 border-0 text-center">
					<h3 class="text-2xl font-display font-bold mb-2">Discover your next getaway</h3>
					<p class="text-slate-600 mb-6">Experience the comfort and beauty of Mipeja Hotel in person.</p>
					<a class="btn-primary" href={hotel.bookingUrl} target="_blank" rel="noreferrer">
						Book your stay now
					</a>
				</div>
			</section>
		</main>

		<!-- Footer -->
		<footer class="border-t border-slate-100 bg-surface mt-20">
			<div class="mx-auto max-w-6xl px-6 py-10">
				<div class="flex flex-wrap items-center justify-between gap-6">
					<div>
						<p class="font-display text-xl font-bold">{hotel.name}</p>
						<p class="text-sm text-slate-500">{hotel.tagline}</p>
					</div>
					<div class="flex flex-wrap gap-4 text-sm font-medium">
						{hotel.socials.map((social) => (
							<a href={social.url} target="_blank" rel="noreferrer" class="hover:text-coral transition-colors">
								{social.label}
							</a>
						))}
					</div>
				</div>
				<p class="mt-6 text-xs text-slate-400">Â© {new Date().getFullYear()} {hotel.name}. All rights reserved.</p>
			</div>
		</footer>
	</div>
</BaseLayout>
