---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";
import Header from "../components/Header.astro";

const pageTitle = `Gallery | ${hotel.name}`;
const pageDescription = `Gallery of photos from ${hotel.name} in ${hotel.location}. Rooms, amenities, and guest experiences.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen bg-white">
		<Header bookingUrl={hotel.bookingUrl} theme="dark" />

		<!-- Gallery Grid -->
		<section class="max-w-7xl mx-auto px-4 sm:px-6 py-16 sm:py-24 md:py-32">
            <div class="text-center mb-12 sm:mb-16 md:mb-20 space-y-3 sm:space-y-4">
				<p class="text-[10px] uppercase tracking-[0.3em] sm:tracking-[0.4em] text-theme-gold font-bold">Moments of Perfection</p>
				<h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-display text-theme-black italic">Photography collection</h2>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
                {[
                    ...hotel.rooms.map(r => ({ src: r.image, title: r.name })),
                    { src: "/images/lounge.svg", title: "Shared Lounge" },
                    { src: "/images/restaurant.svg", title: "Restaurant" },
                    { src: "/images/hero.svg", title: "Hotel Exterior" },
                    { src: "/images/mipeja-hero.jpg", title: "Welcome Plaza" }
                ].map((item, index) => (
                    <div class={`relative group overflow-hidden ${index % 4 === 0 ? 'lg:col-span-2 aspect-[16/9]' : 'aspect-square'}`}>
                        <img src={item.src} alt={item.title} class="w-full h-full object-cover grayscale opacity-80 group-hover:grayscale-0 group-hover:opacity-100 group-hover:scale-105 transition-all duration-1000" loading="lazy" />
                        <div class="absolute inset-0 bg-charcoal/40 opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-end p-8">
                            <p class="text-white text-xs uppercase tracking-[0.3em] font-bold italic">{item.title}</p>
                        </div>
                    </div>
                ))}
			</div>
		</section>
	</div>
</BaseLayout>

