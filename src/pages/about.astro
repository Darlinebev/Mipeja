---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";
import Header from "../components/Header.astro";

const pageTitle = `About | ${hotel.name}`;
const pageDescription = `Learn about ${hotel.name} in ${hotel.location}. Our story, mission, and commitment to hospitality.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen bg-beige/30">
		<Header bookingUrl={hotel.bookingUrl} />

		<!-- Subpage Hero -->
		<section class="relative h-[60vh] flex items-center justify-center overflow-hidden">
			<img src="/images/hero.svg" alt="Our Story" class="absolute inset-0 w-full h-full object-cover brightness-50" />
			<div class="relative z-10 text-center space-y-4">
				<p class="text-[10px] uppercase tracking-[0.4em] text-white font-bold">The Mipeja Legacy</p>
				<h1 class="text-6xl md:text-8xl font-display text-white italic">Our Story</h1>
			</div>
		</section>

		<!-- Story Section (Larita Split) -->
		<section class="max-w-7xl mx-auto px-6 py-32">
			<div class="grid lg:grid-cols-2 gap-24 items-center">
				<div class="grid grid-cols-2 gap-4">
					<div class="aspect-[3/4] overflow-hidden">
                        <img src="/images/mipeja-hero.jpg" alt="Hotel exterior" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700" />
                    </div>
					<div class="aspect-[3/4] overflow-hidden mt-12">
                        <img src="/images/lounge.svg" alt="Hotel lounge" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700" />
                    </div>
				</div>
				<div class="space-y-10">
					<div>
                        <p class="text-[10px] uppercase tracking-[0.4em] text-gold mb-4 font-bold">Welcome to Mipeja</p>
                        <h2 class="text-5xl font-display text-brown leading-tight italic">Elegance and comfort redefined.</h2>
                    </div>
					<div class="space-y-6 text-charcoal/70 leading-relaxed max-w-lg">
						<p>
							Mipeja Hotel was founded with a simple vision: to create a welcoming, comfortable sanctuary for travelers passing through Busia. We believe that hospitality is not just about providing a room, but about creating an experience that guests will remember.
						</p>
						<p>
							Our name, "Mipeja," reflects our commitment to providing a warm, homely atmosphere. We've carefully designed every aspect of our hotel—from the bright, airy rooms to the friendly staff—to ensure that every guest feels valued and cared for.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Values Section -->
		<section class="bg-white py-32 border-y border-beige">
			<div class="max-w-7xl mx-auto px-6">
                <div class="grid lg:grid-cols-3 gap-16">
                    {[
                        { title: "Warmth", desc: "We treat every guest like family. Your comfort and happiness are our top priority.", icon: "W" },
                        { title: "Excellence", desc: "From housekeeping to service, we maintain high standards in everything we do.", icon: "E" },
                        { title: "Community", desc: "We're proud to be part of the Busia community and support local businesses.", icon: "C" }
                    ].map(item => (
                        <div class="space-y-6">
                            <div class="w-12 h-12 bg-beige flex items-center justify-center text-gold font-bold text-xl">{item.icon}</div>
                            <h3 class="font-display text-2xl text-brown">{item.title}</h3>
                            <p class="text-xs uppercase tracking-[0.2em] font-bold text-charcoal/60 leading-relaxed">{item.desc}</p>
                        </div>
                    ))}
                </div>
			</div>
		</section>

		<!-- FAQs Section -->
		<section class="max-w-7xl mx-auto px-6 py-32">
			<div class="grid lg:grid-cols-[0.4fr_0.6fr] gap-24">
                <div class="space-y-6">
                    <p class="text-[10px] uppercase tracking-[0.4em] text-gold font-bold">Assistance</p>
                    <h2 class="text-5xl font-display text-brown italic">Common Questions</h2>
                    <p class="text-charcoal/60 leading-relaxed">Everything you need to know about your stay at Mipeja Hotel.</p>
                </div>
                <div class="divide-y divide-beige">
                    {hotel.faqs.map((faq) => (
                        <details class="group py-8 cursor-pointer">
                            <summary class="flex items-center justify-between font-display text-xl text-brown list-none">
                                <span>{faq.question}</span>
                                <span class="text-gold font-bold transition-transform group-open:rotate-45">+</span>
                            </summary>
                            <div class="mt-6 text-charcoal/70 leading-relaxed max-w-xl">
                                {faq.answer}
                            </div>
                        </details>
                    ))}
                </div>
            </div>
		</section>

		<footer class="bg-charcoal text-white py-24 border-t border-white/5 font-body">
			<div class="max-w-7xl mx-auto px-6">
				<div class="grid lg:grid-cols-4 gap-16">
					<div class="col-span-2 space-y-8">
						<div>
							<p class="font-display text-3xl font-bold tracking-widest uppercase mb-4">{hotel.name}</p>
							<p class="text-xs opacity-60 uppercase tracking-[0.2em] max-w-sm leading-relaxed">{hotel.tagline}</p>
						</div>
					</div>
					<div class="space-y-6">
						<p class="text-[10px] uppercase tracking-[0.3em] font-bold text-gold">Contact Us</p>
						<div class="space-y-4 text-xs uppercase tracking-widest opacity-70">
							<p>{hotel.location}</p>
							<p>{hotel.phone}</p>
							<p>{hotel.email}</p>
						</div>
					</div>
					<div class="space-y-6">
						<p class="text-[10px] uppercase tracking-[0.3em] font-bold text-gold">Quick Links</p>
						<nav class="flex flex-col gap-4 text-xs uppercase tracking-widest opacity-70">
							<a href="/rooms" class="hover:text-gold transition-colors">Rooms & Suites</a>
                            <a href="/amenities" class="hover:text-gold transition-colors">Amenities</a>
							<a href="/contact" class="hover:text-gold transition-colors">Get in touch</a>
						</nav>
					</div>
				</div>
                <div class="mt-20 pt-12 border-t border-white/5 text-center text-[10px] uppercase tracking-[0.3em] opacity-40">
					© {new Date().getFullYear()} {hotel.name}. All rights reserved.
				</div>
			</div>
		</footer>
	</div>
</BaseLayout>

