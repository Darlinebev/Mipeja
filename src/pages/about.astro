---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";

const pageTitle = `About | ${hotel.name}`;
const pageDescription = `Learn about ${hotel.name} in ${hotel.location}. Our story, mission, and commitment to hospitality.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen flex flex-col">
		<!-- Header -->
		<header class="sticky top-0 z-50 glass border-b-0 transition-all duration-300">
			<div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
				<a href="/" class="flex items-center gap-3">
					<div class="h-12 w-12 rounded-2xl bg-coral text-white flex items-center justify-center font-display text-xl font-bold shadow-soft">
						M
					</div>
					<div>
						<p class="text-xl font-display font-bold leading-none">{hotel.name}</p>
						<p class="text-xs text-slate-500 font-medium">{hotel.location}</p>
					</div>
				</a>
				<nav class="hidden md:flex items-center gap-2">
					<a href="/" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">Home</a>
					<a href="/rooms" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">Rooms</a>
					<a href="/about" class="px-4 py-2 rounded-full font-medium text-sm transition-all bg-coral text-white">About</a>
					<a href="/faqs" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">FAQs</a>
					<a href="/contact" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">Contact</a>
				</nav>
				<a class="btn-primary py-2 px-6 text-sm shadow-none hover:shadow-soft" href={hotel.bookingUrl} target="_blank" rel="noreferrer">
					Book Now
				</a>
			</div>
		</header>

		<!-- Main Content -->
		<main class="flex-1">
			<!-- Hero Section -->
			<section class="mx-auto max-w-6xl px-6 py-20 grid lg:grid-cols-2 gap-12 items-center">
				<div class="space-y-8">
					<div>
						<p class="kicker">Our Story</p>
						<h1 class="text-5xl sm:text-6xl font-display font-bold text-ink leading-tight">
							Welcome to Mipeja Hotel
						</h1>
					</div>
					<div class="space-y-4 text-lg text-slate-600 leading-relaxed">
						<p>
							Mipeja Hotel was founded with a simple vision: to create a welcoming, comfortable sanctuary for travelers passing through Busia. We believe that hospitality is not just about providing a room, but about creating an experience that guests will remember.
						</p>
						<p>
							Our name, "Mipeja," reflects our commitment to providing a warm, homely atmosphere. We've carefully designed every aspect of our hotel‚Äîfrom the bright, airy rooms to the friendly staff‚Äîto ensure that every guest feels valued and cared for.
						</p>
					</div>
				</div>
				<div class="relative group">
					<div class="absolute inset-0 bg-gradient-to-tr from-coral/20 to-gold/20 rounded-3xl blur-3xl -z-10 group-hover:blur-2xl transition-all duration-700"></div>
					<img src="/images/hero.svg" alt="Mipeja Hotel" class="w-full rounded-3xl shadow-2xl group-hover:shadow-hover transition-all duration-300" />
				</div>
			</section>

			<!-- Values Section -->
			<section class="mx-auto max-w-6xl px-6 py-20">
				<div class="text-center space-y-4 mb-16">
					<p class="kicker">Our Values</p>
					<h2 class="text-4xl sm:text-5xl font-display font-bold text-ink">What drives us</h2>
				</div>

				<div class="grid md:grid-cols-3 gap-8">
					<div class="card p-8 hover:shadow-hover transition-all duration-300">
						<div class="w-14 h-14 rounded-2xl bg-coral/20 flex items-center justify-center mb-4 text-2xl">
							‚ù§Ô∏è
						</div>
						<h3 class="text-xl font-display font-bold mb-3">Warmth & Hospitality</h3>
						<p class="text-slate-600 leading-relaxed">
							We treat every guest like family. Your comfort and happiness are our top priority.
						</p>
					</div>

					<div class="card p-8 hover:shadow-hover transition-all duration-300">
						<div class="w-14 h-14 rounded-2xl bg-teal/20 flex items-center justify-center mb-4 text-2xl">
							‚ú®
						</div>
						<h3 class="text-xl font-display font-bold mb-3">Excellence</h3>
						<p class="text-slate-600 leading-relaxed">
							From housekeeping to service, we maintain high standards in everything we do.
						</p>
					</div>

					<div class="card p-8 hover:shadow-hover transition-all duration-300">
						<div class="w-14 h-14 rounded-2xl bg-gold/20 flex items-center justify-center mb-4 text-2xl">
							ü§ù
						</div>
						<h3 class="text-xl font-display font-bold mb-3">Community</h3>
						<p class="text-slate-600 leading-relaxed">
							We're proud to be part of the Busia community and support local businesses.
						</p>
					</div>
				</div>
			</section>

			<!-- Reviews Highlight -->
			<section class="mx-auto max-w-6xl px-6 py-20">
				<div class="text-center space-y-4 mb-16">
					<p class="kicker">Guest Love</p>
					<h2 class="text-4xl sm:text-5xl font-display font-bold text-ink">What our guests say</h2>
				</div>

				<div class="grid md:grid-cols-3 gap-8">
					{hotel.testimonials.slice(0, 3).map((testimonial) => (
						<div class="card p-8 hover:shadow-hover transition-all duration-300">
							<div class="flex gap-1 text-gold mb-4">
								{[...Array(testimonial.rating)].map(() => (
									<svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
										<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
									</svg>
								))}
							</div>
							<p class="text-slate-600 mb-4 leading-relaxed">"{testimonial.quote}"</p>
							<p class="font-display font-bold">{testimonial.name}</p>
						</div>
					))}
				</div>
			</section>

			<!-- CTA -->
			<section class="mx-auto max-w-4xl px-6 py-20">
				<div class="card p-12 bg-gradient-to-r from-coral/10 to-teal/10 border-0 text-center">
					<h3 class="text-3xl font-display font-bold mb-4">Experience Mipeja today</h3>
					<p class="text-slate-600 text-lg mb-8">
						Join thousands of satisfied guests who've chosen Mipeja Hotel for their stay in Busia.
					</p>
					<a class="btn-primary" href={hotel.bookingUrl} target="_blank" rel="noreferrer">
						Book your stay
					</a>
				</div>
			</section>
		</main>

		<!-- Footer -->
		<footer class="border-t border-slate-100 bg-surface mt-20">
			<div class="mx-auto max-w-6xl px-6 py-10">
				<div class="flex flex-wrap items-center justify-between gap-6">
					<div>
						<p class="font-display text-xl font-bold">{hotel.name}</p>
						<p class="text-sm text-slate-500">{hotel.tagline}</p>
					</div>
					<div class="flex flex-wrap gap-4 text-sm font-medium">
						{hotel.socials.map((social) => (
							<a href={social.url} target="_blank" rel="noreferrer" class="hover:text-coral transition-colors">
								{social.label}
							</a>
						))}
					</div>
				</div>
				<p class="mt-6 text-xs text-slate-400">¬© {new Date().getFullYear()} {hotel.name}. All rights reserved.</p>
			</div>
		</footer>
	</div>
</BaseLayout>
