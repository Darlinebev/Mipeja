---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { hotel } from "../../data/hotel";
import Header from "../../components/Header.astro";

const pageTitle = `Rooms | ${hotel.name}`;
const pageDescription = `Browse rooms at ${hotel.name} in ${hotel.location}. See features, rates in ${hotel.currency}, and book instantly.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen bg-beige/30">
		<Header bookingUrl={hotel.bookingUrl} />

		<!-- Subpage Hero -->
		<section class="relative h-[60vh] flex items-center justify-center overflow-hidden">
			<img src="/images/mipeja-hero.jpg" alt="Rooms & Suites" class="absolute inset-0 w-full h-full object-cover brightness-50" />
			<div class="relative z-10 text-center space-y-4">
				<p class="text-[10px] uppercase tracking-[0.4em] text-white font-bold">Unrivaled Comfort</p>
				<h1 class="text-6xl md:text-8xl font-display text-white italic">Rooms & Suites</h1>
			</div>
		</section>

		<!-- Room Collection -->
		<section class="max-w-7xl mx-auto px-6 py-32">
			<div class="space-y-32">
				{hotel.rooms.map((room, index) => (
					<div class={`grid lg:grid-cols-[1fr_1.2fr] gap-16 items-center ${index % 2 !== 0 ? 'lg:flex-row-reverse' : ''}`}>
						<div class={`space-y-8 ${index % 2 !== 0 ? 'lg:order-2' : 'lg:order-1'}`}>
							<div class="space-y-4">
								<p class="text-[10px] uppercase tracking-[0.4em] text-gold font-bold">Exclusive Discovery</p>
								<h2 class="text-5xl font-display text-brown italic">{room.name}</h2>
							</div>
							<p class="text-charcoal/70 leading-relaxed">
								Experience high-end amenities and sophisticated design in our {room.name}. Every detail is crafted for your utmost comfort and relaxation.
							</p>
							<div class="grid grid-cols-2 gap-y-4 text-[10px] uppercase tracking-widest font-bold text-charcoal/60">
								{room.features.slice(0, 4).map(feature => (
									<div class="flex items-center gap-3">
										<span class="text-gold">✦</span> {feature}
									</div>
								))}
							</div>
							<div class="flex items-center gap-8 pt-4">
								<div class="text-brown">
									<span class="text-[10px] uppercase tracking-widest block opacity-50 font-bold mb-1">Starting from</span>
									<span class="text-3xl font-display italic">{room.price}</span>
								</div>
								<div class="flex gap-4">
									<a href={`/rooms/${room.slug}`} class="border border-brown/20 px-8 py-4 text-[10px] uppercase tracking-[0.2em] font-bold text-brown hover:border-brown transition-all">Explore →</a>
									<a href={hotel.bookingUrl} class="bg-brown px-10 py-4 text-[10px] uppercase tracking-[0.2em] font-bold text-white hover:bg-gold transition-all shadow-xl shadow-brown/10">Book Now</a>
								</div>
							</div>
						</div>
						<div class={`relative aspect-video overflow-hidden group ${index % 2 !== 0 ? 'lg:order-1' : 'lg:order-2'}`}>
							<img src={room.image} alt={room.name} class="w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-1000" loading="lazy" />
						</div>
					</div>
				))}
			</div>
		</section>

		<footer class="bg-charcoal text-white py-24 border-t border-white/5 font-body">
			<div class="max-w-7xl mx-auto px-6">
				<div class="grid lg:grid-cols-4 gap-16">
					<div class="col-span-2 space-y-8">
						<div>
							<p class="font-display text-3xl font-bold tracking-widest uppercase mb-4">{hotel.name}</p>
							<p class="text-xs opacity-60 uppercase tracking-[0.2em] max-w-sm leading-relaxed">{hotel.tagline}</p>
						</div>
						<div class="flex gap-6">
							{hotel.socials?.map((social) => (
								<a href={social.url} target="_blank" rel="noreferrer" class="text-white hover:text-gold transition-colors text-xs uppercase tracking-widest">
									{social.label}
								</a>
							))}
						</div>
					</div>
					<div class="space-y-6">
						<p class="text-[10px] uppercase tracking-[0.3em] font-bold text-gold">Contact Us</p>
						<div class="space-y-4 text-xs uppercase tracking-widest opacity-70">
							<p>{hotel.location}</p>
							<p>{hotel.phone}</p>
							<p>{hotel.email}</p>
						</div>
					</div>
					<div class="space-y-6">
						<p class="text-[10px] uppercase tracking-[0.3em] font-bold text-gold">Quick Links</p>
						<nav class="flex flex-col gap-4 text-xs uppercase tracking-widest opacity-70">
							<a href="/rooms" class="hover:text-gold transition-colors">Rooms & Suites</a>
							<a href="/amenities" class="hover:text-gold transition-colors">Experience</a>
							<a href="/about" class="hover:text-gold transition-colors">Our Story</a>
							<a href="/contact" class="hover:text-gold transition-colors">Get in touch</a>
						</nav>
					</div>
				</div>
				<div class="mt-20 pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6 text-[10px] uppercase tracking-[0.3em] opacity-40">
					<p>© {new Date().getFullYear()} {hotel.name}. All rights reserved.</p>
					<div class="flex gap-8">
						<span>Terms & Conditions</span>
						<span>Privacy Policy</span>
					</div>
				</div>
			</div>
		</footer>
	</div>
</BaseLayout>

