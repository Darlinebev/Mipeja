---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";
import Header from "../components/Header.astro";

const pageTitle = `Contact | ${hotel.name}`;
const pageDescription = `Get in touch with ${hotel.name}. Contact us for bookings, inquiries, and special requests.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen bg-theme-off-white">
		<Header bookingUrl={hotel.bookingUrl} />

		<!-- Subpage Hero -->
		<section class="relative h-[50vh] sm:h-[55vh] md:h-[60vh] flex items-center justify-center overflow-hidden">
			<img src="/images/eighteen.png" alt="Contact Us" class="absolute inset-0 w-full h-full object-cover brightness-50" />
			<div class="relative z-10 text-center space-y-3 sm:space-y-4 px-4">
				<p class="text-[10px] uppercase tracking-[0.3em] sm:tracking-[0.4em] text-white font-bold">Personalized Assistance</p>
				<h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-display text-white italic">Get in touch</h1>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="max-w-7xl mx-auto px-4 sm:px-6 py-16 sm:py-24 md:py-32">
			<div class="grid lg:grid-cols-[0.4fr_0.6fr] gap-12 sm:gap-16 md:gap-24">
                <div class="space-y-8 sm:space-y-12">
                    <div class="space-y-4 sm:space-y-6">
                        <p class="text-[10px] uppercase tracking-[0.3em] sm:tracking-[0.4em] text-theme-gold font-bold">Visit Us</p>
                        <h2 class="text-3xl sm:text-4xl font-display text-theme-black italic">Our Location</h2>
                        <p class="text-theme-black/70 text-sm sm:text-base leading-relaxed uppercase tracking-widest text-[10px] font-bold">
                            {hotel.location}
                        </p>
                    </div>

                    <div class="space-y-4 sm:space-y-6">
                        <p class="text-[10px] uppercase tracking-[0.3em] sm:tracking-[0.4em] text-theme-gold font-bold">Call or Email</p>
                        <div class="space-y-2">
                           <p class="text-xl sm:text-2xl font-display text-theme-black break-all">{hotel.phone}</p>
                           <p class="text-xl sm:text-2xl font-display text-theme-black break-all">{hotel.email}</p>
                        </div>
                    </div>

                    <div class="space-y-4 sm:space-y-6">
                        <p class="text-[10px] uppercase tracking-[0.3em] sm:tracking-[0.4em] text-theme-gold font-bold">Follow Us</p>
                        <div class="flex flex-wrap gap-4 sm:gap-8">
                            {hotel.socials.map((social) => (
                                <a href={social.url} target="_blank" rel="noreferrer" class="text-charcoal/60 hover:text-theme-gold transition-colors text-[10px] uppercase tracking-widest font-bold border-b border-transparent hover:border-theme-gold pb-1">
                                    {social.label}
                                </a>
                            ))}
                        </div>
                    </div>
                </div>

                <div class="bg-white p-6 sm:p-8 md:p-12 lg:p-16 shadow-2xl space-y-8 sm:space-y-12 border border-gray-100">
                    <div class="space-y-3 sm:space-y-4">
                        <h3 class="text-xl sm:text-2xl md:text-3xl font-display text-theme-black italic">Send a message</h3>
                        <p class="text-xs uppercase tracking-widest text-theme-black/50 font-bold">We will respond within 24 hours</p>
                    </div>
                    <form class="space-y-6 sm:space-y-8">
                        <div class="grid md:grid-cols-2 gap-6 sm:gap-8">
                            <div class="space-y-2">
                                <label class="text-[10px] uppercase tracking-widest font-bold text-theme-black/40">Full Name</label>
                                <input type="text" class="w-full bg-transparent border-b border-gray-200 py-3 sm:py-4 focus:outline-none focus:border-theme-gold transition-colors" />
                            </div>
                            <div class="space-y-2">
                                <label class="text-[10px] uppercase tracking-widest font-bold text-theme-black/40">Email Address</label>
                                <input type="email" class="w-full bg-transparent border-b border-gray-200 py-3 sm:py-4 focus:outline-none focus:border-theme-gold transition-colors" />
                            </div>
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] uppercase tracking-widest font-bold text-theme-black/40">Subject</label>
                            <input type="text" class="w-full bg-transparent border-b border-gray-200 py-3 sm:py-4 focus:outline-none focus:border-theme-gold transition-colors" />
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] uppercase tracking-widest font-bold text-theme-black/40">Message</label>
                            <textarea rows={4} class="w-full bg-transparent border-b border-gray-200 py-3 sm:py-4 focus:outline-none focus:border-theme-gold transition-colors resize-none"></textarea>
                        </div>
                        <button type="submit" class="bg-theme-black text-white px-10 sm:px-12 py-4 sm:py-6 text-[10px] uppercase tracking-[0.4em] font-bold hover:bg-theme-gold hover:text-white transition-all w-full md:w-auto">
                            Send Message â†’
                        </button>
                    </form>
                </div>
            </div>
		</section>


	</div>
</BaseLayout>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const faqHeaders = document.querySelectorAll('.faq-header');
		
		faqHeaders.forEach(header => {
			header.addEventListener('click', () => {
				const card = header.closest('.faq-card');
				const answer = card.querySelector('.faq-answer');
				const chevron = card.querySelector('.chevron');
				
				answer.classList.toggle('hidden');
				chevron.classList.toggle('rotate-180');
			});
		});
	});
</script>

