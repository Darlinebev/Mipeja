---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";

const pageTitle = `Contact | ${hotel.name}`;
const pageDescription = `Get in touch with ${hotel.name}. Contact us for bookings, inquiries, and special requests.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen flex flex-col">
		<!-- Header -->
		<header class="sticky top-0 z-50 glass border-b-0 transition-all duration-300">
			<div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
				<a href="/" class="flex items-center gap-3">
					<div class="h-12 w-12 rounded-2xl bg-coral text-white flex items-center justify-center font-display text-xl font-bold shadow-soft">
						M
					</div>
					<div>
						<p class="text-xl font-display font-bold leading-none">{hotel.name}</p>
						<p class="text-xs text-slate-500 font-medium">{hotel.location}</p>
					</div>
				</a>
				<nav class="hidden md:flex items-center gap-2">
					<a href="/" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">Home</a>
					<a href="/rooms" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">Rooms</a>
					<a href="/amenities" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">Amenities</a>
					<a href="/faqs" class="px-4 py-2 rounded-full font-medium text-sm transition-all text-slate-600 hover:text-coral hover:bg-coral/10">FAQs</a>
					<a href="/contact" class="px-4 py-2 rounded-full font-medium text-sm transition-all bg-coral text-white">Contact</a>
				</nav>
				<a class="btn-primary py-2 px-6 text-sm shadow-none hover:shadow-soft" href={hotel.bookingUrl} target="_blank" rel="noreferrer">
					Book Now
				</a>
			</div>
		</header>

		<!-- Main Content -->
		<main class="flex-1">
			<!-- Hero -->
			<section class="mx-auto max-w-4xl px-6 py-20">
				<div class="text-center space-y-4 mb-16">
					<p class="kicker">Get In Touch</p>
					<h1 class="text-5xl sm:text-6xl font-display font-bold text-ink leading-tight">
						Contact Us
					</h1>
					<p class="text-xl text-slate-600 max-w-2xl mx-auto">
						Have a question? We'd love to hear from you. Reach out and we'll respond as soon as we can.
					</p>
				</div>

				<!-- Contact Methods -->
				<div class="grid md:grid-cols-3 gap-6 mb-12">
					<!-- Phone -->
					<div class="card p-8 text-center hover:shadow-hover transition-all">
						<div class="w-12 h-12 rounded-full bg-coral/20 flex items-center justify-center mx-auto mb-4">
							<svg class="w-6 h-6 text-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
							</svg>
						</div>
						<h3 class="font-display font-bold text-lg mb-2">Phone</h3>
						<p class="text-slate-600 mb-4">{hotel.phone}</p>
						<p class="text-sm text-slate-500">Available 24/7</p>
					</div>

					<!-- Email -->
					<div class="card p-8 text-center hover:shadow-hover transition-all">
						<div class="w-12 h-12 rounded-full bg-teal/20 flex items-center justify-center mx-auto mb-4">
							<svg class="w-6 h-6 text-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
							</svg>
						</div>
						<h3 class="font-display font-bold text-lg mb-2">Email</h3>
						<p class="text-slate-600 mb-4">{hotel.email}</p>
						<p class="text-sm text-slate-500">We'll respond within 2 hours</p>
					</div>

					<!-- WhatsApp -->
					<div class="card p-8 text-center hover:shadow-hover transition-all">
						<div class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center mx-auto mb-4">
							<svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
								<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.076 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421-7.403h-.004a9.87 9.87 0 00-4.255.949c-1.238.503-2.36 1.235-3.239 2.113a9.847 9.847 0 00-2.167 3.23c-.506 1.248-.776 2.599-.776 4.001 0 1.402.27 2.753.776 4.001 1.172 2.928 3.695 5.451 6.623 6.623 1.248.506 2.599.776 4.001.776s2.753-.27 4.001-.776c2.928-1.172 5.451-3.695 6.623-6.623.506-1.248.776-2.599.776-4.001 0-1.402-.27-2.753-.776-4.001-1.172-2.928-3.695-5.451-6.623-6.623a9.847 9.847 0 00-4.001-.775m0-2C6.464 2 3.546 3.916 1.956 6.855c-.502 1.003-.776 2.074-.776 3.146 0 1.072.274 2.143.776 3.146 1.59 2.939 4.508 4.855 7.78 4.855s6.19-1.916 7.78-4.855c.502-1.003.776-2.074.776-3.146 0-1.072-.274-2.143-.776-3.146C20.19 3.916 17.272 2 14 2h0z"/>
							</svg>
						</div>
						<h3 class="font-display font-bold text-lg mb-2">WhatsApp</h3>
						<p class="text-slate-600 mb-4">Chat with us</p>
						<a href={hotel.whatsAppUrl} target="_blank" rel="noreferrer" class="text-sm text-green-600 font-semibold hover:underline">
							Start conversation →
						</a>
					</div>
				</div>

				<!-- Contact Form -->
				<div class="card p-8 bg-gradient-to-br from-sand/50 to-slate-50/50">
					<h3 class="text-2xl font-display font-bold mb-6">Send us a message</h3>
					<form class="space-y-4">
						<div class="grid md:grid-cols-2 gap-4">
							<input type="text" placeholder="Your name" required class="px-4 py-3 rounded-xl border border-slate-200 focus:outline-none focus:border-coral focus:ring-2 focus:ring-coral/20 transition-all" />
							<input type="email" placeholder="Your email" required class="px-4 py-3 rounded-xl border border-slate-200 focus:outline-none focus:border-coral focus:ring-2 focus:ring-coral/20 transition-all" />
						</div>
						<input type="text" placeholder="Subject" required class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:outline-none focus:border-coral focus:ring-2 focus:ring-coral/20 transition-all" />
						<textarea rows={5} placeholder="Your message..." required class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:outline-none focus:border-coral focus:ring-2 focus:ring-coral/20 transition-all resize-none"></textarea>
						<button type="submit" class="btn-primary w-full">Send message</button>
					</form>
				</div>
			</section>
		</main>

		<!-- Footer -->
		<footer class="border-t border-slate-100 bg-surface mt-20">
			<div class="mx-auto max-w-6xl px-6 py-10">
				<div class="flex flex-wrap items-center justify-between gap-6">
					<div>
						<p class="font-display text-xl font-bold">{hotel.name}</p>
						<p class="text-sm text-slate-500">{hotel.tagline}</p>
					</div>
					<div class="flex flex-wrap gap-4 text-sm font-medium">
						{hotel.socials.map((social) => (
							<a href={social.url} target="_blank" rel="noreferrer" class="hover:text-coral transition-colors">
								{social.label}
							</a>
						))}
					</div>
				</div>
				<p class="mt-6 text-xs text-slate-400">© {new Date().getFullYear()} {hotel.name}. All rights reserved.</p>
			</div>
		</footer>
	</div>
</BaseLayout>
