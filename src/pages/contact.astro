---
import BaseLayout from "../layouts/BaseLayout.astro";
import { hotel } from "../data/hotel";
import Header from "../components/Header.astro";

const pageTitle = `Contact | ${hotel.name}`;
const pageDescription = `Get in touch with ${hotel.name}. Contact us for bookings, inquiries, and special requests.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<div class="min-h-screen bg-beige/30">
		<Header bookingUrl={hotel.bookingUrl} />

		<!-- Subpage Hero -->
		<section class="relative h-[60vh] flex items-center justify-center overflow-hidden">
			<img src="/images/hero.svg" alt="Contact Us" class="absolute inset-0 w-full h-full object-cover brightness-50" />
			<div class="relative z-10 text-center space-y-4">
				<p class="text-[10px] uppercase tracking-[0.4em] text-white font-bold">Personalized Assistance</p>
				<h1 class="text-6xl md:text-8xl font-display text-white italic">Get in touch</h1>
			</div>
		</section>

		<!-- FAQ Section -->
		<section class="bg-white py-32 px-6">
			<div class="max-w-7xl mx-auto">
				<div class="grid lg:grid-cols-2 gap-12">
					<!-- Left Column -->
					<div class="space-y-6">
						<p class="inline-block px-4 py-2 bg-deep-teal text-white text-xs font-bold rounded-full uppercase tracking-wider">Frequently asked questions</p>
						<h2 class="text-4xl font-display text-charcoal">Frequently asked <span class="text-deep-teal">questions</span></h2>
						<p class="text-gray-600 leading-relaxed">Find answers to common questions about our hotel, amenities, and services.</p>
					</div>
					<!-- Right Column -->
					<div class="space-y-6">
						<!-- FAQ 1 -->
						<div class="bg-white rounded-2xl shadow-soft p-6">
							<div class="flex justify-between items-center cursor-pointer" onclick="toggleAccordion(this)">
								<h3 class="text-lg font-bold text-charcoal">What time is check-in at Mipeja Hotel, Busia?</h3>
								<div class="w-8 h-8 bg-deep-teal rounded-full flex items-center justify-center">
									<svg class="w-4 h-4 text-white transform transition-transform chevron rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
									</svg>
								</div>
							</div>
							<div class="mt-4 text-gray-600 answer">Check-in is from 14:00:00 to 00:00:00.</div>
						</div>
						<!-- FAQ 2 -->
						<div class="bg-white rounded-2xl shadow-soft p-6">
							<div class="flex justify-between items-center cursor-pointer" onclick="toggleAccordion(this)">
								<h3 class="text-lg font-bold text-charcoal">What time is check-out at Mipeja Hotel, Busia?</h3>
								<div class="w-8 h-8 bg-deep-teal rounded-full flex items-center justify-center">
									<svg class="w-4 h-4 text-white transform transition-transform chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
									</svg>
								</div>
							</div>
							<div class="mt-4 text-gray-600 answer hidden">Check-out is 10:00:00.</div>
						</div>
						<!-- FAQ 3 -->
						<div class="bg-white rounded-2xl shadow-soft p-6">
							<div class="flex justify-between items-center cursor-pointer" onclick="toggleAccordion(this)">
								<h3 class="text-lg font-bold text-charcoal">Is parking available at Mipeja Hotel, Busia?</h3>
								<div class="w-8 h-8 bg-deep-teal rounded-full flex items-center justify-center">
									<svg class="w-4 h-4 text-white transform transition-transform chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
									</svg>
								</div>
							</div>
							<div class="mt-4 text-gray-600 answer hidden">Parking is available at Mipeja Hotel, Busia.</div>
						</div>
						<!-- FAQ 4 -->
						<div class="bg-white rounded-2xl shadow-soft p-6">
							<div class="flex justify-between items-center cursor-pointer" onclick="toggleAccordion(this)">
								<h3 class="text-lg font-bold text-charcoal">Are pets allowed at Mipeja Hotel, Busia?</h3>
								<div class="w-8 h-8 bg-deep-teal rounded-full flex items-center justify-center">
									<svg class="w-4 h-4 text-white transform transition-transform chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
									</svg>
								</div>
							</div>
							<div class="mt-4 text-gray-600 answer hidden">Pets are not allowed at Mipeja Hotel, Busia.</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="max-w-7xl mx-auto px-6 py-32">
			<div class="grid lg:grid-cols-[0.4fr_0.6fr] gap-24">
                <div class="space-y-12">
                    <div class="space-y-6">
                        <p class="text-[10px] uppercase tracking-[0.4em] text-terracotta font-bold">Visit Us</p>
                        <h2 class="text-4xl font-display text-brown italic">Our Location</h2>
                        <p class="text-charcoal/70 leading-relaxed uppercase tracking-widest text-[10px] font-bold">
                            {hotel.location}
                        </p>
                    </div>

                    <div class="space-y-6">
                        <p class="text-[10px] uppercase tracking-[0.4em] text-terracotta font-bold">Call or Email</p>
                        <div class="space-y-2">
                           <p class="text-2xl font-display text-brown">{hotel.phone}</p>
                           <p class="text-2xl font-display text-brown">{hotel.email}</p>
                        </div>
                    </div>

                    <div class="space-y-6">
                        <p class="text-[10px] uppercase tracking-[0.4em] text-terracotta font-bold">Follow Us</p>
                        <div class="flex gap-8">
                            {hotel.socials.map((social) => (
                                <a href={social.url} target="_blank" rel="noreferrer" class="text-charcoal/60 hover:text-terracotta transition-colors text-[10px] uppercase tracking-widest font-bold border-b border-transparent hover:border-terracotta pb-1">
                                    {social.label}
                                </a>
                            ))}
                        </div>
                    </div>
                </div>

                <div class="bg-white p-16 shadow-2xl space-y-12 border border-beige">
                    <div class="space-y-4">
                        <h3 class="text-3xl font-display text-brown italic">Send a message</h3>
                        <p class="text-xs uppercase tracking-widest text-charcoal/50 font-bold">We will respond within 24 hours</p>
                    </div>
                    <form class="space-y-8">
                        <div class="grid md:grid-cols-2 gap-8">
                            <div class="space-y-2">
                                <label class="text-[10px] uppercase tracking-widest font-bold text-charcoal/40">Full Name</label>
                                <input type="text" class="w-full bg-transparent border-b border-beige py-4 focus:outline-none focus:border-terracotta transition-colors" />
                            </div>
                            <div class="space-y-2">
                                <label class="text-[10px] uppercase tracking-widest font-bold text-charcoal/40">Email Address</label>
                                <input type="email" class="w-full bg-transparent border-b border-beige py-4 focus:outline-none focus:border-terracotta transition-colors" />
                            </div>
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] uppercase tracking-widest font-bold text-charcoal/40">Subject</label>
                            <input type="text" class="w-full bg-transparent border-b border-beige py-4 focus:outline-none focus:border-terracotta transition-colors" />
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] uppercase tracking-widest font-bold text-charcoal/40">Message</label>
                            <textarea rows={4} class="w-full bg-transparent border-b border-beige py-4 focus:outline-none focus:border-terracotta transition-colors resize-none"></textarea>
                        </div>
                        <button type="submit" class="bg-brown text-white px-12 py-6 text-[10px] uppercase tracking-[0.4em] font-bold hover:bg-terracotta hover:text-white transition-all w-full md:w-auto">
                            Send Message â†’
                        </button>
                    </form>
                </div>
            </div>
		</section>


	</div>
</BaseLayout>

<script>
	function toggleAccordion(element) {
		const answer = element.parentElement.querySelector('.answer');
		const chevron = element.querySelector('.chevron');
		if (answer.classList.contains('hidden')) {
			answer.classList.remove('hidden');
			chevron.classList.add('rotate-180');
		} else {
			answer.classList.add('hidden');
			chevron.classList.remove('rotate-180');
		}
	}
</script>

